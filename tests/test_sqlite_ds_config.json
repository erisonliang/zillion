{
    "url": "sqlite:///{schema}",
    "metrics": [
        {
            "name": "aggr_sales",
            "type": "Integer",
            "aggregation": "sum"
        }
    ],
    "tables": {
        "partners": {
            "type": "dimension",
            "create_fields": true,
            "columns": {
                "id": {
                    "fields": ["partner_id"]
                },
                "name": {
                    "fields": ["partner_name"]
                }
            }
        },
        
        "campaigns": {
            "type": "dimension",
            "create_fields": true,
            "parent": "partners",
            "columns": {
                "id": {
                    "fields": ["campaign_id"]
                },
                "name": {
                    "fields": ["campaign_name"]
                },
                "partner_id": {
                    "fields": ["partner_id"]
                }
            }
        },

        "aggregated_stats": {
            "type": "metric",
            "create_fields": true,
            "columns": {
                "partner_id": {
                    "fields": ["partner_id"]
                },
                "campaign_id": {
                    "fields": ["campaign_id"]
                },
                "leads": {
                    "fields": ["leads"]
                },
                "sales": {
                    "fields": ["sales", "aggr_sales"]
                },
                "revenue": {
                    "fields": ["revenue"]
                }
            }
        }
    }
}
